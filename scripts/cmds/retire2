module.exports = {
  config: {
    name: "retire2",
    version: "1.0",
    author: "L'Uchiha Perdu",
    role: 1,
    shortDescription: "Retirer de la banque d'un utilisateur",
    longDescription: "L'admin peut retirer de l'argent directement de la banque d'un utilisateur.",
    category: "√©conomie",
    guide: "{p}retire2 [UID] [montant]"
  },

  onStart: async function ({ args, message, event }) {
    const adminID = "61563822463333";
    const senderID = event.senderID;

    if (senderID !== adminID) return message.reply("‚ùå Seul l'admin peut utiliser cette commande !");

    if (args.length < 2) return message.reply("‚ö†Ô∏è Utilisation : `/retire2 [UID] [montant]`");

    const targetID = args[0];
    const amount = parseInt(args[1]);

    let bankData = JSON.parse(fs.readFileSync(balanceFile));

    if (!bankData[targetID]) return message.reply("‚ùå Cet utilisateur n'existe pas !");
    if (bankData[targetID].bank < amount) return message.reply("‚ùå Fonds insuffisants !");

    bankData[targetID].bank -= amount;
    fs.writeFileSync(balanceFile, JSON.stringify(bankData, null, 2));

    message.reply(`üè¶ **Retrait effectu√© !**\n- ${amount} üí∏ retir√©s de la banque de ${targetID}`);
  }
};